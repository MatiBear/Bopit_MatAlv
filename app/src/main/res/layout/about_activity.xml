<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_about.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title and Back Button -->
    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue">

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/volver"
            android:textColor="@android:color/white"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/red"/>

        <ImageView
            android:id="@+id/launcherIcon"
            android:layout_width="83dp"
            android:layout_height="48dp"
            android:layout_below="@id/backButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-43dp"
            android:src="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/acerca_de"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@id/launcherIcon"
            android:layout_centerHorizontal="true"
            android:gravity="center"/>

    </RelativeLayout>

    <!-- Creator Section -->
    <RelativeLayout
        android:id="@+id/creatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleLayout"
        android:padding="16dp">

        <TextView
            android:id="@+id/creatorLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creador"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/creatorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/matias_alvarado"
            android:textSize="16sp"
            android:layout_below="@id/creatorLabel"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </RelativeLayout>

    <!-- Description Section -->
    <RelativeLayout
        android:id="@+id/descriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/creatorLayout"
        android:padding="16dp">

        <TextView
            android:id="@+id/descriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_description"
            android:textSize="16sp"
            android:layout_below="@id/descriptionLabel"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </RelativeLayout>

    <!-- Version Section -->
    <RelativeLayout
        android:id="@+id/versionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionLayout"
        android:padding="16dp">

        <TextView
            android:id="@+id/versionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_value"
            android:textSize="16sp"
            android:layout_below="@id/versionLabel"
            android:layout_marginTop="8dp"
            android:gravity="center"/>

    </RelativeLayout>

</RelativeLayout>